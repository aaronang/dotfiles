        position top
        font pango:Terminus 8
        colors {
            background $base00
            statusline $base06
            separator $base01
            
            # colorclass        border  backgr. text
            focused_workspace   $base0C $base00 $base06
            active_workspace    $base0C $base00 $base06
            inactive_workspace  $base01 $base00 $base06
            urgent_workspace    $base08 $base00 $base06
        }
}

# Gaps
for_window [class="^.*"] border pixel 2
gaps inner 10
gaps outer 0

# On startup
exec compton --config ~/.config/compton.conf -b

# Screen brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 

# Volume
bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute && killall -USR1 i3status
bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute && killall -USR1 i3status
bindsym XF86AudioMute exec amixer -q set Master toggle && killall -USR1 i3status
bindsym $mod+Up exec amixer -q set Master 2dB+ unmute && killall -USR1 i3status
bindsym $mod+Down exec amixer -q set Master 2dB- unmute && killall -USR1 i3status
bindsym $mod+m exec amixer -q set Master toggle && killall -USR1 i3status && exec amixer -q set Speaker+LO unmute 
